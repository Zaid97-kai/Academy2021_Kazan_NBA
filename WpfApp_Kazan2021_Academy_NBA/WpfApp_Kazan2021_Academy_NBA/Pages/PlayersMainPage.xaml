<Page x:Class="WpfApp_Kazan2021_Academy_NBA.Pages.PlayersMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_Kazan2021_Academy_NBA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Players Main">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="{StaticResource MainBlue}">
            <Label>Season:</Label>
            <ComboBox Name="CmbSeasons"></ComboBox>
            <Label>Team:</Label>
            <ComboBox Name="CmbTeams"></ComboBox>
            <Label>Player name:</Label>
            <TextBox Name="TxtPlayerName"></TextBox>
        </StackPanel>
        <DataGrid Name="GridPlayers" Grid.Row="1"></DataGrid>
        <Grid Grid.Row="2"></Grid>
    </Grid>
</Page>
